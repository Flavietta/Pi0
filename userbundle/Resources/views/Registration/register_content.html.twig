{% trans_default_domain 'FOSUserBundle' %}
<body class="gray-bg">

<div class="middle-box text-center loginscreen   animated fadeInDown">
    <div>
        <div>

            <h1 class="logo-name">IN+</h1>

        </div>
        <h3>Register to IN+</h3>
        <p>Create account to see it in action.</p>
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register m-t'}}) }}

        <div class="form-group">
            {{ form_widget(form.email, { 'attr': {'class': 'form-control','placeholder':'Email'} }) }}
        </div>

        <div class="form-group">
            {{ form_widget(form.username, { 'attr': {'class': 'form-control','placeholder':'username'} }) }}
        </div>

        <div class="form-group">
            {{ form_widget(form.plainPassword ) }}
        </div>
        <div>
            <input type="submit" class="btn btn-primary block full-width m-b" value="{{ 'registration.submit'|trans }}" />
        </div>
        {{ form_end(form) }}
    </div>
</div>
</body>